<!-- Container to hold posts (nested) -->
<div class="container">
  <div class="row">
    <div id='all-title-column' class="col-12">
      <h1>All posts</h1>
      <div class="row">
        <% posts = Post.order(date_created: :asc).reverse
           posts.each do |post| %>
            <div class="col-10 offset-1 nested-div-containing-posts">
              <div>
                <img class="index-profile-image" src="<%= url('img/tile.png') %>" alt="" width="50px" height="50px">
                <h6 class='index-img-clear'>User: <b><%= User.find(post.user_id).username %></b></h6>
                <h6 class='index-img-clear'>Posted on: <%= post.date_created %></h6>
              </div>
              <div class="containment-div">
                <div class="index-title-div">
                  <h3 class="index-post-title"><%= post.title %></h3>
                </div>
                <div class="index-post-content">
                  <a class="post-link" href="/post/<%= post.id %>"> <%= post.content %> </a>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>